<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/background_w"
    android:padding="10dp"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_vpn_key_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/a"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Reset Your Password?" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="vertical">


        <EditText
            android:id="@+id/userEmailTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/a"
            android:hint="Enter your Email" />

        <EditText
            android:id="@+id/newPasswordTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/j"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="New Password"
            />

        <EditText
            android:id="@+id/confirmPasswordTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/j"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Confirm Password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/changePasswordId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:textColor="@color/a"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:text="Change Password" />
        <Button
            android:id="@+id/changeClearId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:textColor="@color/a"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:text="Clear" />
    </LinearLayout>
</LinearLayout>